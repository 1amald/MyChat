<link rel="stylesheet" href="~/css/croppie.css">
<div class="alert alert-success collapse fade show my-class over" role="alert" id="success">
    <strong>Отлично!</strong> Все изменения сохранены.
    <button type="button" class="close" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="alert alert-danger collapse fade show my-class over" role="alert" id="danger">
    <strong>Ошибка! </strong><span id="spanDanger">Изменения не сохранены.</span>
    <button type="button" class="close">
        <span aria-hidden="true" >&times;</span>
    </button>
</div>

<div class="settings-div">
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Смена аватара</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div>
                        <div>
                            <div id="main-cropper"></div>
                            <a class="actionSelect">
                                <label for="select" class="button btn btn-primary btn-block">Выбрать фотографию</label>
                                <input type="file" id="select" value="Choose Image" accept="image/*" style="display: none">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                    <button type="button" class="btn btn-primary btn-block actionUpload" data-dismiss="modal">Сохранить и загрузить</button>
                </div>
            </div>
        </div>
    </div>
    <div class="settings-block">
        <form class="form-group btn-block">
            <p class="settings-text">Сменить статус</p>
            <textarea class="form-control margin-top-5 btn-block" name="status" id="inputStatus" maxlength="300"></textarea>
            <button class="btn btn-primary btn-block margin-top-5" type="button" id="sendStatus">Поменять статус</button>
        </form>
    </div>
    <div class="settings-block">
        <form class="form-group btn-block">
            <p class="settings-text">Сменить Аватар</p>
            <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#exampleModal">
                Сменить аватар
            </button>
        </form>
    </div>
    <div class="settings-block">
        <p class="settings-text">Сменить пароль</p>
        <form class="form-group btn-block">
            <div class="form-group">
                <input  class="form-control margin-top-5 btn-block" placeholder="Текущий пароль" id="currentPassword" required type="password"/>
            </div>
            <div class="form-group">
                <input class="form-control margin-top-5 btn-block" placeholder="Новый пароль" id="newPassword" required type="password"/>
            </div>
            <div class="form-group">
                <input class="form-control margin-top-5 btn-block" placeholder="Подтверждение пароля" id="confirmPassword" required type="password"/>
            </div>
            <button type="button" class="btn btn-primary btn-block margin-top-5" id="sendPassword">Сменить пароль</button>
        </form>
    </div>
    <div class="settings-block">
        <a class="btn btn-outline-danger btn-block" href="@Url.Action("Logout","Account")">Выйти из аккаунта</a>
    </div>
</div>

<script src="~/js/croppie.js"></script>
<script src="~/js/settings.js"></script>


